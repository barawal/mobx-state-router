{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "outDir": "./server-build",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src",
    "server"
  ],
  "exclude": [
    "src/index.tsx"
  ]
}
